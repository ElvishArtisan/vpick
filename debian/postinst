#!/bin/sh
# postinst script for vpick

case "$1" in
    configure)
      /usr/sbin/groupadd -r -g 152 vpick &>/dev/null || :
      /usr/sbin/useradd -o -u 152 -g vpick -G audio -s /bin/false -r -c "Host chooser" vpick &>/dev/null || :
      /usr/bin/systemctl daemon-reload
      if [ -x /usr/bin/gtk-update-icon-cache ] ; then
	  /usr/bin/gtk-update-icon-cache -f --quiet %{_datadir}/icons/hicolor || :
      fi
      ;;
    
    abort-upgrade|abort-remove|abort-deconfigure)
      ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
